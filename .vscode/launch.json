	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"name": "vscode-jest-tests.v2.lidnd",
			"request": "launch",
			"args": [
				"--runInBand",
				"--watchAll=false",
				"--testNamePattern",
				"--runTestsByPath"
			],
			"cwd": "${workspaceFolder}/lidnd",
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen",
			"disableOptimisticBPs": true,
			"program": "${workspaceFolder}/lidnd/node_modules/.bin/vitest",
			"windows": {
				"program": "${workspaceFolder}/lidnd/node_modules/vitest/bin/vitest"
			}
		}
	]
}
